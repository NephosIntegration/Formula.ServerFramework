@model UseRecoveryCodeViewModel
@{
    ViewData["Title"] = "Use recovery code";
}
<div class="login-page">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Recovery Code</h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="TwoFactorAuth" asp-action="UseRecoveryCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Code"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="submit" type="submit">Submit</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
